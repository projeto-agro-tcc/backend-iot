container_commands:
  01_migrate:
    command: "sudo su && source /var/app/venv/*/bin/activate && python3 manage.py migrate && django-admin.py migrate"
    leader_only: true

  02_createsuperuser:
    command: "sudo su && source /var/app/venv/*/bin/activate && echo \"from django.contrib.auth.models import User; User.objects.create_superuser('admin', 'email@email.com', 'monitor@mento2021biga')\" | python3 manage.py shell"
    leader_only: true

option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: backend_iot.wsgi:application
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: static
